{
  "name": "c4c-campus-website",
  "type": "module",
  "version": "1.0.0",
  "description": "C4C Campus - AI Development Accelerator for Animal Liberation",
  "scripts": {
    "prepare": "husky || true",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:production": "npm run optimize:images && npm run check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "optimize:images": "node scripts/optimize-images.js",
    "analyze:bundle": "astro build --verbose",
    "perf:audit": "lighthouse http://localhost:4321 --output=html --output-path=./docs/performance/lighthouse-report.html",
    "db:types": "npx supabase gen types typescript --local > src/types/generated.ts",
    "db:types:check": "node scripts/check-schema-types.js",
    "db:types:check:full": "node scripts/check-schema-types.js --with-field-scan",
    "db:field-names:check": "node scripts/scan-field-names.js",
    "db:case:check": "node scripts/detect-case-mismatches.js",
    "db:validate": "node scripts/validate-schema.js",
    "db:validate:all": "npm run db:types:check && npm run db:field-names:check && npm run db:case:check",
    "db:reset": "echo '⚠️ DESTRUCTIVE: Deletes ALL data. Backup first: npm run db:backup' && echo 'Press Ctrl+C to cancel (5s countdown)...' && sleep 5 && psql $DATABASE_URL < schema.sql",
    "db:backup": "pg_dump $DATABASE_URL > backup_$(date +%Y%m%d_%H%M%S).sql",
    "db:schema-apply": "npm run db:backup && npm run db:reset && npm run db:validate"
  },
  "dependencies": {
    "@astrojs/node": "^9.5.0",
    "@astrojs/react": "^4.4.1",
    "@astrojs/vercel": "^9.0.2",
    "@stripe/stripe-js": "^8.6.0",
    "@supabase/storage-js": "^2.76.1",
    "@supabase/supabase-js": "^2.87.2",
    "@tailwindcss/vite": "^4.1.18",
    "@tiptap/extension-link": "^3.14.0",
    "@tiptap/extension-placeholder": "^3.9.0",
    "@tiptap/react": "^3.14.0",
    "@tiptap/starter-kit": "^3.9.0",
    "@types/d3": "^7.4.3",
    "@types/papaparse": "^5.5.2",
    "@types/react-grid-layout": "^1.3.5",
    "astro": "^5.16.6",
    "chart.js": "^4.5.1",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "handlebars": "^4.7.8",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "marked": "^12.0.2",
    "node-schedule": "^2.1.1",
    "papaparse": "^5.5.3",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.4",
    "react": "^19.2.3",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.3",
    "resend": "^6.3.0",
    "sharp": "^0.34.4",
    "stripe": "^20.1.0",
    "tailwindcss": "^4.1.18",
    "ua-parser-js": "^2.0.6"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@axe-core/cli": "^4.11.0",
    "@axe-core/puppeteer": "^4.11.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.2",
    "axe-core": "^4.11.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "pa11y": "^9.0.1",
    "pg": "^8.16.3",
    "puppeteer": "^24.27.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
