---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Contact Us - Code for Compassion Campus"
  description="Get in touch with C4C Campus. Visit us in Bengaluru, join remotely, or send us a message about our programs."
>
  <div class="container mx-auto px-4 py-16">
    <!-- Header -->
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-black mb-4">Get in Touch</h1>
      <p class="text-xl text-text-muted max-w-2xl mx-auto">
        Have questions about our programs? Want to visit our campus? We'd love to hear from you.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Contact Form -->
      <div class="card p-8">
        <h2 class="text-2xl font-bold mb-6">Send us a message</h2>
        <form id="contact-form" class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-semibold mb-2">Your Name *</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-primary transition-colors"
              placeholder="John Doe"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-semibold mb-2">Email Address *</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-primary transition-colors"
              placeholder="you@example.com"
            />
          </div>

          <div>
            <label for="subject" class="block text-sm font-semibold mb-2">Subject *</label>
            <select
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-primary transition-colors"
            >
              <option value="">Select a subject</option>
              <option value="bootcamp">Bootcamp Program</option>
              <option value="hackathon">Hackathons</option>
              <option value="accelerator">Full-Time Accelerator</option>
              <option value="partnership">Partnership Opportunities</option>
              <option value="visit">Campus Visit</option>
              <option value="general">General Inquiry</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-semibold mb-2">Message *</label>
            <textarea
              id="message"
              name="message"
              required
              rows="6"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-primary transition-colors resize-vertical"
              placeholder="Tell us what's on your mind..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="btn btn-primary w-full"
          >
            Send Message
          </button>

          <div id="form-message" class="hidden mt-4 p-4 rounded-lg text-sm"></div>
        </form>
      </div>

      <!-- Contact Info & Map -->
      <div class="space-y-8">
        <!-- Contact Details -->
        <div class="card p-8">
          <h2 class="text-2xl font-bold mb-6">Contact Information</h2>

          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold mb-1">Email</h3>
                <a href="mailto:info@codeforcompassion.com" class="text-primary hover:text-primary-dark">
                  info@codeforcompassion.com
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold mb-1">Location</h3>
                <p class="text-text-muted">
                  The Yard Coworking Space<br/>
                  3rd Floor, A wing No 1, Carlton Towers<br/>
                  HAL Old Airport Rd, HAL 2nd Stage<br/>
                  Indiranagar, Bengaluru<br/>
                  Karnataka 560008, India
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.317 4.37a19.791 19.791 0 00-4.885-1.515.074.074 0 00-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 00-5.487 0 12.64 12.64 0 00-.617-1.25.077.077 0 00-.079-.037A19.736 19.736 0 003.677 4.37a.07.07 0 00-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 00.031.057 19.9 19.9 0 005.993 3.03.078.078 0 00.084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 00-.041-.106 13.107 13.107 0 01-1.872-.892.077.077 0 01-.008-.128 10.2 10.2 0 00.372-.292.074.074 0 01.077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 01.078.01c.12.098.246.198.373.292a.077.077 0 01-.006.127 12.299 12.299 0 01-1.873.892.077.077 0 00-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 00.084.028 19.839 19.839 0 006.002-3.03.077.077 0 00.032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 00-.031-.03z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold mb-1">Discord</h3>
                <a href="https://discord.gg/qewprMy7G6" target="_blank" rel="noopener noreferrer" class="text-primary hover:text-primary-dark">
                  Join our community
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Google Maps Embed -->
        <div class="card p-4">
          <h3 class="text-xl font-bold mb-4 px-4">Find Us</h3>
          <div class="rounded-lg overflow-hidden">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3887.723456789!2d77.6437056!3d12.9607979!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae15939364f60f%3A0xef6b8a73f2a99154!2sThe%20Yard%20-%20Co-working%20Space!5e0!3m2!1sen!2sin!4v1234567890"
              width="100%"
              height="300"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="C4C Campus Location - The Yard Coworking Space, Indiranagar, Bengaluru"
            ></iframe>
          </div>
          <p class="text-sm text-text-muted mt-4 px-4">
            We're located inside The Yard coworking space in the heart of Indiranagar, easily accessible by metro and bus.
          </p>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('contact-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const form = e.target as HTMLFormElement;
      const formData = new FormData(form);
      const messageDiv = document.getElementById('form-message');
      const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;

      if (!messageDiv || !submitButton) return;

      // Disable submit button and show loading state
      submitButton.disabled = true;
      submitButton.textContent = 'Sending...';
      messageDiv.classList.add('hidden');

      try {
        // Prepare data for API
        const data = {
          name: formData.get('name'),
          email: formData.get('email'),
          subject: formData.get('subject'),
          message: formData.get('message')
        };

        // Send to API endpoint
        const response = await fetch('/api/contact', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (response.ok) {
          // Show success message
          messageDiv.textContent = result.message || 'Message sent successfully! We\'ll get back to you soon.';
          messageDiv.className = 'mt-4 p-4 rounded-lg text-sm bg-success/10 text-success border border-success/20';
          messageDiv.classList.remove('hidden');

          // Reset form
          form.reset();
        } else {
          // Show error message
          messageDiv.textContent = result.error || 'Failed to send message. Please try again or email us directly at info@codeforcompassion.com';
          messageDiv.className = 'mt-4 p-4 rounded-lg text-sm bg-error/10 text-error border border-error/20';
          messageDiv.classList.remove('hidden');
        }

      } catch (error) {
        console.error('Error:', error);
        messageDiv.textContent = 'Something went wrong. Please email us directly at info@codeforcompassion.com';
        messageDiv.className = 'mt-4 p-4 rounded-lg text-sm bg-error/10 text-error border border-error/20';
        messageDiv.classList.remove('hidden');
      } finally {
        // Re-enable submit button
        submitButton.disabled = false;
        submitButton.textContent = 'Send Message';
      }
    });
  </script>
</BaseLayout>
