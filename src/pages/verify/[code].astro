---
/**
 * Public Certificate Verification Page
 * No authentication required
 */

import BaseLayout from '../../layouts/BaseLayout.astro';

const verificationCode = Astro.params.code;

let certificate = null;
let error = null;
let isValid = false;

if (verificationCode) {
  try {
    const apiUrl = new URL(`/api/certificates/verify/${verificationCode}`, Astro.url.origin);
    const response = await fetch(apiUrl.toString());

    if (response.ok) {
      const data = await response.json();
      isValid = data.valid;
      certificate = data.certificate;
      error = data.error;
    } else {
      const data = await response.json();
      error = data.error || 'Certificate not found';
    }
  } catch (err) {
    console.error('Error verifying certificate:', err);
    error = 'Failed to verify certificate';
  }
} else {
  error = 'Missing verification code';
}

const pageTitle = isValid ? 'Certificate Verified' : 'Certificate Verification';
const pageDescription = 'Verify the authenticity of C4C Campus certificates';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">
          Certificate Verification
        </h1>
        <p class="text-gray-600">
          Verify the authenticity of C4C Campus certificates
        </p>
      </div>

      {error && (
        <div class="bg-white rounded-lg shadow-md border-2 border-red-200 p-8 text-center">
          <div class="inline-block p-6 bg-red-100 rounded-full mb-6">
            <svg
              class="w-16 h-16 text-red-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width={2}
                d="M6 18L18 6M6 6l12 12"
              />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mb-3">
            Verification Failed
          </h2>
          <p class="text-gray-600 mb-6">{error}</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/"
              class="inline-block px-6 py-3 border border-gray-300 rounded-lg font-medium hover:bg-gray-50 transition-colors"
            >
              Go to Homepage
            </a>
            <a
              href="/certificates"
              class="inline-block bg-green-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-green-700 transition-colors"
            >
              View My Certificates
            </a>
          </div>
        </div>
      )}

      {isValid && certificate && (
        <div class="bg-white rounded-lg shadow-lg border-2 border-green-200 overflow-hidden">
          <!-- Verification Success Header -->
          <div class="bg-gradient-to-r from-green-500 to-green-600 text-white p-8 text-center">
            <div class="inline-block p-4 bg-white/20 rounded-full mb-4">
              <svg
                class="w-12 h-12"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width={2}
                  d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                />
              </svg>
            </div>
            <h2 class="text-2xl font-bold mb-2">Certificate Verified</h2>
            <p class="text-green-100">
              This certificate is authentic and was issued by C4C Campus
            </p>
          </div>

          <!-- Certificate Details -->
          <div class="p-8">
            <div class="space-y-6">
              <!-- Student Name -->
              <div class="text-center pb-6 border-b border-gray-200">
                <p class="text-sm text-gray-600 mb-2">This certifies that</p>
                <h3 class="text-3xl font-bold text-gray-900">
                  {certificate.student_name}
                </h3>
              </div>

              <!-- Course Name -->
              <div class="text-center pb-6 border-b border-gray-200">
                <p class="text-sm text-gray-600 mb-2">
                  has successfully completed
                </p>
                <h4 class="text-2xl font-semibold text-gray-900">
                  {certificate.course_title}
                </h4>
              </div>

              <!-- Certificate Details Grid -->
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 pt-4">
                <div class="bg-gray-50 rounded-lg p-4">
                  <p class="text-xs text-gray-600 mb-1 uppercase tracking-wide">
                    Certificate Code
                  </p>
                  <p class="font-mono font-semibold text-gray-900">
                    {certificate.certificate_code}
                  </p>
                </div>

                <div class="bg-gray-50 rounded-lg p-4">
                  <p class="text-xs text-gray-600 mb-1 uppercase tracking-wide">
                    Completion Date
                  </p>
                  <p class="font-semibold text-gray-900">
                    {new Date(certificate.completion_date).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </p>
                </div>

                <div class="bg-gray-50 rounded-lg p-4">
                  <p class="text-xs text-gray-600 mb-1 uppercase tracking-wide">
                    Issue Date
                  </p>
                  <p class="font-semibold text-gray-900">
                    {new Date(certificate.issued_date).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </p>
                </div>

                <div class="bg-gray-50 rounded-lg p-4">
                  <p class="text-xs text-gray-600 mb-1 uppercase tracking-wide">
                    Status
                  </p>
                  <div class="flex items-center gap-2">
                    <span class="inline-block w-2 h-2 bg-green-500 rounded-full"></span>
                    <p class="font-semibold text-gray-900 capitalize">
                      {certificate.status}
                    </p>
                  </div>
                </div>

                {certificate.instructor_name && (
                  <div class="bg-gray-50 rounded-lg p-4">
                    <p class="text-xs text-gray-600 mb-1 uppercase tracking-wide">
                      Instructor
                    </p>
                    <p class="font-semibold text-gray-900">
                      {certificate.instructor_name}
                    </p>
                  </div>
                )}

                {certificate.hours && (
                  <div class="bg-gray-50 rounded-lg p-4">
                    <p class="text-xs text-gray-600 mb-1 uppercase tracking-wide">
                      Course Hours
                    </p>
                    <p class="font-semibold text-gray-900">
                      {certificate.hours} hours
                    </p>
                  </div>
                )}
              </div>

              <!-- C4C Campus Info -->
              <div class="bg-green-50 border border-green-200 rounded-lg p-6 mt-8">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0">
                    <img
                      src="/logo.jpeg"
                      alt="C4C Campus"
                      class="w-16 h-16 rounded-full"
                    />
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-2">
                      C4C Campus
                    </h4>
                    <p class="text-sm text-gray-700 mb-1">
                      AI Development Accelerator for Animal Liberation
                    </p>
                    <p class="text-sm text-gray-600">
                      Building liberation infrastructure for animal advocacy
                    </p>
                    <a
                      href="https://codeforcompassion.com"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-green-600 hover:text-green-700 font-medium mt-2 inline-block"
                    >
                      Visit codeforcompassion.com â†’
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Footer Actions -->
          <div class="bg-gray-50 border-t border-gray-200 px-8 py-6">
            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href="/courses"
                class="flex-1 text-center bg-green-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-green-700 transition-colors"
              >
                Browse Courses
              </a>
              <a
                href="/"
                class="flex-1 text-center px-6 py-3 border border-gray-300 rounded-lg font-medium hover:bg-gray-100 transition-colors"
              >
                Learn More
              </a>
            </div>
          </div>
        </div>
      )}

      <!-- Information Section -->
      <div class="mt-8 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          About Certificate Verification
        </h3>
        <div class="space-y-3 text-sm text-gray-700">
          <p>
            C4C Campus certificates are digitally verified to ensure authenticity.
            Each certificate includes:
          </p>
          <ul class="list-disc list-inside space-y-2 ml-4">
            <li>Unique certificate number</li>
            <li>Unique verification code</li>
            <li>Student information</li>
            <li>Course completion details</li>
            <li>Issue and completion dates</li>
          </ul>
          <p class="pt-2">
            If you have questions about a certificate or need to report an issue,
            please contact us at{' '}
            <a
              href="mailto:info@codeforcompassion.com"
              class="text-green-600 hover:text-green-700 font-medium"
            >
              info@codeforcompassion.com
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
