---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Student Login - Code for Compassion Campus"
  description="Login portal for C4C Campus students, alumni, and accelerator participants."
>
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-md mx-auto">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-black mb-4">Welcome Back</h1>
        <p class="text-text-muted">
          Login to access your student portal
        </p>
      </div>

      <!-- Login Card -->
      <div class="card p-8">
        <form id="login-form" class="space-y-6">
          <div>
            <label for="email" class="block text-sm font-semibold mb-2">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-primary transition-colors"
              placeholder="your.email@example.com"
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-semibold mb-2">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-primary transition-colors"
              placeholder="Enter your password"
            />
          </div>

          <button
            type="submit"
            class="btn btn-primary w-full"
          >
            Sign In
          </button>

          <div id="error-message" class="hidden mt-4 p-4 rounded-lg text-sm bg-error/10 text-error border border-error/20">
          </div>
        </form>

        <div class="mt-6 pt-6 border-t border-gray-200 text-center">
          <p class="text-sm text-text-muted mb-4">
            Forgot your password? <a href="/forgot-password" class="text-primary hover:text-primary-dark font-medium">Reset it here</a>
          </p>
          <p class="text-sm text-text-muted">
            Not a student yet? <a href="/apply" class="text-primary hover:text-primary-dark font-medium">Apply now</a>
          </p>
        </div>
      </div>

      <!-- Info Box -->
      <div class="mt-8 card bg-surface p-6">
        <h3 class="font-bold mb-3">Student Portal Access</h3>
        <p class="text-sm text-text-muted mb-2">
          The student portal is available for:
        </p>
        <ul class="text-sm text-text-muted space-y-1">
          <li>→ Current bootcamp students</li>
          <li>→ Accelerator participants</li>
          <li>→ Program alumni</li>
        </ul>
        <p class="text-sm text-text-muted mt-4">
          You'll receive login credentials when you're accepted into a program.
        </p>
      </div>
    </div>
  </div>

  <script>
    import { supabase } from '../lib/supabase';

    // Check authentication and load application
    async function checkExistingSession() {
      const params = new URLSearchParams(window.location.search);
      
      // Check current session state
      const { data: { session }, error: sessionError } = await supabase.auth.getSession();
      
      // If we were redirected due to session expiry, clear it and show message
      if (params.get('error') === 'session-expired') {
        // Always sign out to clear any stale cookies
        await supabase.auth.signOut();
        const errorDiv = document.getElementById('error-message');
        if (errorDiv) {
          errorDiv.textContent = 'Your session has expired. Please log in again.';
          errorDiv.classList.remove('hidden');
        }
        // Clean up URL to prevent redirect loop
        window.history.replaceState({}, '', '/login');
        // CRITICAL: Return here to prevent further session checks
        return;
      }

      // If we have a valid session, proceed with role-based redirect
      if (session) {
        // User is already logged in, redirect based on role
        const { data: application } = await supabase
          .from('applications')
          .select('status, role')
          .eq('user_id', session.user.id)
          .single();

        if (application?.status === 'approved') {
          switch (application.role) {
            case 'admin':
              window.location.href = '/admin/dashboard';
              break;
            case 'teacher':
              window.location.href = '/teacher/courses';
              break;
            case 'student':
            default:
              window.location.href = '/dashboard';
              break;
          }
        } else {
          window.location.href = '/application-status';
        }
      }
    }

    // Check on page load
    checkExistingSession();

    document.getElementById('login-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const form = e.target as HTMLFormElement;
      const email = (form.elements.namedItem('email') as HTMLInputElement).value;
      const password = (form.elements.namedItem('password') as HTMLInputElement).value;
      const errorDiv = document.getElementById('error-message');
      const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;

      if (!errorDiv || !submitButton) return;

      // Disable submit button and show loading state
      submitButton.disabled = true;
      submitButton.textContent = 'Signing in...';
      errorDiv.classList.add('hidden');

      try {
        // Attempt to sign in with Supabase
        const { data, error } = await supabase.auth.signInWithPassword({
          email,
          password
        });

        if (error) {
          // Show error message
          errorDiv.textContent = `We don't recognize that email address or password. Please check your credentials or contact info@codeforcompassion.com if you believe this is an error.`;
          errorDiv.classList.remove('hidden');

          submitButton.disabled = false;
          submitButton.textContent = 'Sign In';
        } else {
          // Check user's application status and role
          const { data: application } = await supabase
            .from('applications')
            .select('status, role')
            .eq('user_id', data.user.id)
            .single();

          // Redirect based on role and application status
          if (application?.status === 'approved') {
            // Role-based redirect
            switch (application.role) {
              case 'admin':
                window.location.href = '/admin/dashboard';
                break;
              case 'teacher':
                window.location.href = '/teacher/courses';
                break;
              case 'student':
              default:
                window.location.href = '/dashboard';
                break;
            }
          } else {
            // Pending, rejected, or waitlisted - show status page
            window.location.href = '/application-status';
          }
        }
      } catch (err) {
        console.error('Login error:', err);
        errorDiv.textContent = 'An error occurred. Please try again later.';
        errorDiv.classList.remove('hidden');

        submitButton.disabled = false;
        submitButton.textContent = 'Sign In';
      }
    });
  </script>
</BaseLayout>
