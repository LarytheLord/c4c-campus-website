---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Application Status - C4C Campus">
  <div class="min-h-screen bg-background">
    <!-- Header -->
    <div class="bg-surface border-b border-border">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold">Application Status</h1>
            <p class="text-text-muted" id="welcome-text">Welcome!</p>
          </div>
          <button id="logout-btn" class="btn btn-ghost text-sm">
            Sign Out
          </button>
        </div>
      </div>
    </div>

    <!-- Loading State -->
    <div id="loading-state" class="container mx-auto px-4 py-12">
      <div class="text-center">
        <div class="inline-block animate-spin rounded-full h-12 w-12 border-4 border-primary border-t-transparent"></div>
        <p class="mt-4 text-text-muted">Loading your application...</p>
      </div>
    </div>

    <!-- Not Logged In -->
    <div id="not-logged-in" class="hidden container mx-auto px-4 py-12">
      <div class="max-w-md mx-auto text-center">
        <div class="card">
          <h2 class="text-2xl font-bold mb-4">Please Sign In</h2>
          <p class="text-text-muted mb-6">You need to be logged in to view your application status.</p>
          <a href="/login" class="btn btn-primary">
            Go to Login
          </a>
        </div>
      </div>
    </div>

    <!-- No Application Found -->
    <div id="no-application" class="hidden container mx-auto px-4 py-12">
      <div class="max-w-md mx-auto text-center">
        <div class="card">
          <h2 class="text-2xl font-bold mb-4">No Application Found</h2>
          <p class="text-text-muted mb-6">We couldn't find an application associated with your account.</p>
          <a href="/apply" class="btn btn-primary">
            Submit Application
          </a>
        </div>
      </div>
    </div>

    <!-- Application Status Content -->
    <div id="status-content" class="hidden container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">

        <!-- Pending Status -->
        <div id="status-pending" class="hidden">
          <div class="card bg-yellow-50 border-yellow-200 mb-8">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0">
                <svg class="w-12 h-12 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="flex-1">
                <h2 class="text-2xl font-bold text-yellow-900 mb-2">Application Under Review</h2>
                <p class="text-yellow-800 mb-4">
                  Thank you for applying to C4C Campus! We have received your application and our team is currently reviewing it. We'll notify you via email once a decision has been made.
                </p>
                <div class="text-sm text-yellow-700">
                  <p><strong>Submitted:</strong> <span id="submitted-date">-</span></p>
                  <p><strong>Program:</strong> <span id="program-name" class="capitalize">-</span></p>
                </div>
              </div>
            </div>
          </div>

          <!-- Application Details -->
          <div class="card mb-6">
            <div class="flex items-center justify-between mb-6">
              <h3 class="text-xl font-bold">Your Application</h3>
              <button id="edit-btn" class="btn btn-secondary">
                Edit Application
              </button>
            </div>

            <div id="application-details" class="space-y-6">
              <!-- Details loaded dynamically -->
            </div>
          </div>

          <!-- What Happens Next -->
          <div class="card">
            <h3 class="text-xl font-bold mb-4">What Happens Next?</h3>
            <ol class="space-y-4">
              <li class="flex gap-3">
                <span class="flex-shrink-0 w-6 h-6 rounded-full bg-primary text-white flex items-center justify-center text-sm font-bold">1</span>
                <div>
                  <strong>Review Process</strong>
                  <p class="text-text-muted text-sm">Our team reviews all applications carefully. This typically takes 3-5 business days.</p>
                </div>
              </li>
              <li class="flex gap-3">
                <span class="flex-shrink-0 w-6 h-6 rounded-full bg-primary text-white flex items-center justify-center text-sm font-bold">2</span>
                <div>
                  <strong>Decision Email</strong>
                  <p class="text-text-muted text-sm">You'll receive an email at <span id="user-email" class="font-medium">-</span> with our decision.</p>
                </div>
              </li>
              <li class="flex gap-3">
                <span class="flex-shrink-0 w-6 h-6 rounded-full bg-primary text-white flex items-center justify-center text-sm font-bold">3</span>
                <div>
                  <strong>Access to Platform</strong>
                  <p class="text-text-muted text-sm">If approved, you'll gain access to the student dashboard, course materials, and all program resources.</p>
                </div>
              </li>
            </ol>
          </div>
        </div>

        <!-- Rejected Status -->
        <div id="status-rejected" class="hidden">
          <div class="card bg-red-50 border-red-200">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0">
                <svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </div>
              <div class="flex-1">
                <h2 class="text-2xl font-bold text-red-900 mb-2">Application Not Approved</h2>
                <p class="text-red-800 mb-4">
                  Thank you for your interest in C4C Campus. Unfortunately, we are unable to offer you a place in the program at this time.
                </p>
                <p class="text-red-700 mb-4">
                  We receive many more applications than we have capacity for, and this decision does not reflect on your potential or commitment to our mission.
                </p>
                <p class="text-red-700">
                  You are welcome to reapply in future cohorts. Keep building your skills and we hope to see your application again!
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Waitlisted Status -->
        <div id="status-waitlisted" class="hidden">
          <div class="card bg-blue-50 border-blue-200">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0">
                <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="flex-1">
                <h2 class="text-2xl font-bold text-blue-900 mb-2">You're on the Waitlist</h2>
                <p class="text-blue-800 mb-4">
                  Your application has been reviewed and we're impressed! While we don't have immediate capacity, you've been placed on our waitlist.
                </p>
                <p class="text-blue-700">
                  If a spot opens up, we'll contact you via email. You'll also be prioritized for the next cohort.
                </p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

    <!-- Edit Application Modal -->
    <div id="edit-modal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
      <div class="bg-white rounded-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto shadow-xl">
        <div class="p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold">Edit Application</h2>
            <button id="close-edit-modal" class="text-text-muted hover:text-text-primary">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>

          <form id="edit-form" class="space-y-4">
            <!-- Form fields loaded dynamically based on program -->
            <div id="edit-form-fields"></div>

            <div class="flex gap-3 pt-4">
              <button type="submit" class="btn btn-primary flex-1">
                Save Changes
              </button>
              <button type="button" id="cancel-edit" class="btn btn-ghost flex-1">
                Cancel
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { supabase } from '../lib/supabase';

    let currentUser: any = null;
    let userApplication: any = null;

    // Escape HTML to prevent XSS attacks
    function escapeHtml(str: string | null | undefined): string {
      if (str == null) return '';
      return String(str)
        .replace(/&/g, '&amp;')
        .replace(/</g, '&lt;')
        .replace(/>/g, '&gt;')
        .replace(/"/g, '&quot;')
        .replace(/'/g, '&#039;');
    }

    // Check authentication and load application
    async function checkAuthAndLoadApplication() {
      const { data: { session } } = await supabase.auth.getSession();

      if (!session) {
        document.getElementById('loading-state')?.classList.add('hidden');
        document.getElementById('not-logged-in')?.classList.remove('hidden');
        return;
      }

      currentUser = session.user;

      // Fetch user's application
      const { data: application, error } = await supabase
        .from('applications')
        .select('*')
        .eq('user_id', currentUser.id)
        .single();

      if (error || !application) {
        document.getElementById('loading-state')?.classList.add('hidden');
        document.getElementById('no-application')?.classList.remove('hidden');
        return;
      }

      userApplication = application;

      // If approved, redirect to dashboard based on role
      if (application.status === 'approved') {
        switch (application.role) {
          case 'admin':
            window.location.href = '/admin/dashboard';
            break;
          case 'teacher':
            window.location.href = '/teacher/courses';
            break;
          case 'student':
          default:
            window.location.href = '/dashboard';
            break;
        }
        return;
      }

      // Show application status
      displayApplicationStatus();
    }

    // Display application status
    function displayApplicationStatus() {
      if (!userApplication) return;

      const welcomeText = document.getElementById('welcome-text');
      if (welcomeText) {
        welcomeText.textContent = `Welcome, ${userApplication.name.split(' ')[0]}!`;
      }

      // Show status card based on status
      const statusId = `status-${userApplication.status}`;
      document.getElementById(statusId)?.classList.remove('hidden');

      // Fill in details
      const submittedDate = document.getElementById('submitted-date');
      if (submittedDate) {
        submittedDate.textContent = new Date(userApplication.created_at).toLocaleDateString('en-IN', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        });
      }

      const programName = document.getElementById('program-name');
      if (programName) {
        programName.textContent = userApplication.program;
      }

      const userEmail = document.getElementById('user-email');
      if (userEmail) {
        userEmail.textContent = userApplication.email;
      }

      // Display application details
      displayApplicationDetails();

      // Show content
      document.getElementById('loading-state')?.classList.add('hidden');
      document.getElementById('status-content')?.classList.remove('hidden');
    }

    // Display application details
    function displayApplicationDetails() {
      const detailsContainer = document.getElementById('application-details');
      if (!detailsContainer || !userApplication) return;

      let html = `
        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <label class="text-sm font-medium text-text-muted">Name</label>
            <p class="mt-1">${escapeHtml(userApplication.name)}</p>
          </div>
          <div>
            <label class="text-sm font-medium text-text-muted">Email</label>
            <p class="mt-1">${escapeHtml(userApplication.email)}</p>
          </div>
          <div>
            <label class="text-sm font-medium text-text-muted">WhatsApp</label>
            <p class="mt-1">${escapeHtml(userApplication.whatsapp) || '-'}</p>
          </div>
          <div>
            <label class="text-sm font-medium text-text-muted">Location</label>
            <p class="mt-1">${escapeHtml(userApplication.location) || '-'}</p>
          </div>
          <div>
            <label class="text-sm font-medium text-text-muted">Discord</label>
            <p class="mt-1">${escapeHtml(userApplication.discord) || '-'}</p>
          </div>
        </div>
      `;

      if (userApplication.program === 'bootcamp') {
        html += `
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Which track?</label>
            <p class="mt-1">${escapeHtml(userApplication.track) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Why do you want to learn to engineer compassion?</label>
            <p class="mt-1 whitespace-pre-wrap">${escapeHtml(userApplication.motivation) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Technical Experience</label>
            <p class="mt-1 whitespace-pre-wrap">${escapeHtml(userApplication.technical_experience) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Can you commit to 10 weeks (Saturdays, 2.5 hours each)?</label>
            <p class="mt-1 whitespace-pre-wrap">${escapeHtml(userApplication.commitment) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Protected Class</label>
            <p class="mt-1">${escapeHtml(userApplication.protected_class) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Career Goals</label>
            <p class="mt-1 whitespace-pre-wrap">${escapeHtml(userApplication.career_goals) || '-'}</p>
          </div>
        `;
      } else if (userApplication.program === 'accelerator') {
        html += `
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Track</label>
            <p class="mt-1 capitalize">${escapeHtml(userApplication.track) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Project Name</label>
            <p class="mt-1">${escapeHtml(userApplication.project_name) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Project Description</label>
            <p class="mt-1 whitespace-pre-wrap">${escapeHtml(userApplication.project_description) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Link to prototype (GitHub, demo, etc.)</label>
            <p class="mt-1">${userApplication.prototype_link ? `<a href="${escapeHtml(userApplication.prototype_link)}" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">${escapeHtml(userApplication.prototype_link)}</a>` : '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Tech stack</label>
            <p class="mt-1">${escapeHtml(userApplication.tech_stack) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Who will use this tool?</label>
            <p class="mt-1 whitespace-pre-wrap">${escapeHtml(userApplication.target_users) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">What do you need help with to get to production?</label>
            <p class="mt-1 whitespace-pre-wrap">${escapeHtml(userApplication.production_needs) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Technical experience</label>
            <p class="mt-1 whitespace-pre-wrap">${escapeHtml(userApplication.technical_experience) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Team size</label>
            <p class="mt-1">${userApplication.team_size || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Current stage</label>
            <p class="mt-1">${escapeHtml(userApplication.current_stage) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Can you commit to the 10-week program (with a minimum of 3 weeks in-person in Bengaluru)?</label>
            <p class="mt-1">${escapeHtml(userApplication.commitment) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Are you building a for-profit or non-profit?</label>
            <p class="mt-1">${escapeHtml(userApplication.funding) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Protected Class</label>
            <p class="mt-1">${escapeHtml(userApplication.protected_class) || '-'}</p>
          </div>
          <div class="mt-4">
            <label class="text-sm font-medium text-text-muted">Career Goals</label>
            <p class="mt-1 whitespace-pre-wrap">${escapeHtml(userApplication.career_goals) || '-'}</p>
          </div>
        `;
      }

      detailsContainer.innerHTML = html;
    }

    // Open edit modal
    function openEditModal() {
      if (!userApplication) return;

      const modal = document.getElementById('edit-modal');
      const formFields = document.getElementById('edit-form-fields');

      if (!formFields) return;

      // Build form based on program - Common fields first
      let html = `
        <div>
          <label class="block text-sm font-medium mb-2">Full Name</label>
          <input type="text" name="name" value="${escapeHtml(userApplication.name)}" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="Your full name">
        </div>
        <div>
          <label class="block text-sm font-medium mb-2">WhatsApp Number</label>
          <input type="tel" name="whatsapp" value="${escapeHtml(userApplication.whatsapp)}" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="+91-9876543210">
        </div>
        <div>
          <label class="block text-sm font-medium mb-2">Location</label>
          <input type="text" name="location" value="${escapeHtml(userApplication.location)}" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="Mumbai, Maharashtra">
        </div>
        <div>
          <label class="block text-sm font-medium mb-2">Discord Handle</label>
          <input type="text" name="discord" value="${escapeHtml(userApplication.discord)}" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="username#1234">
        </div>
      `;

      if (userApplication.program === 'bootcamp') {
        // Bootcamp-specific fields
        html += `
          <div>
            <label class="block text-sm font-medium mb-2">Which track? *</label>
            <select name="track" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option value="">Select...</option>
              <option ${userApplication.track === 'Animal Advocacy' ? 'selected' : ''}>Animal Advocacy</option>
              <option ${userApplication.track === 'Climate Action' ? 'selected' : ''}>Climate Action</option>
              <option ${userApplication.track === 'AI Safety & Security' ? 'selected' : ''}>AI Safety & Security</option>
              <option ${userApplication.track === 'Hybrid (all three)' ? 'selected' : ''}>Hybrid (all three)</option>
            </select>
            <p class="text-xs text-gray-500 mt-1">
              Not sure which track fits your interests?
              <a href="/tracks" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">
                Learn more about each track
              </a>
            </p>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Why do you want to learn to engineer compassion? *</label>
            <textarea name="motivation" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="What draws you to building AI with ethics built in?">${escapeHtml(userApplication.motivation) || ''}</textarea>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Technical experience (if any)</label>
            <textarea name="technicalExperience" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="Any coding, automation, or technical experience? Totally fine if none!">${escapeHtml(userApplication.technical_experience) || ''}</textarea>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Can you commit to 10 weeks (Saturdays, 2.5 hours each)? *</label>
            <select name="commitment" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option value="">Select...</option>
              <option ${userApplication.commitment === 'Yes, in-person in Bengaluru' ? 'selected' : ''}>Yes, in-person in Bengaluru</option>
              <option ${userApplication.commitment === 'Yes, remote participation' ? 'selected' : ''}>Yes, remote participation</option>
              <option ${userApplication.commitment === 'Need to discuss timing' ? 'selected' : ''}>Need to discuss timing</option>
              <option ${userApplication.commitment === 'No, but interested in future cohorts' ? 'selected' : ''}>No, but interested in future cohorts</option>
            </select>
          </div>
          <div>
            <label class="flex items-center gap-2 text-sm font-medium mb-2">
              <input type="checkbox" name="scholarshipRequested" ${userApplication.scholarship_requested ? 'checked' : ''} class="rounded">
              <span>Request Scholarship</span>
            </label>
          </div>
          <div id="scholarship-category-field" class="${userApplication.scholarship_requested ? '' : 'hidden'}">
            <label class="block text-sm font-medium mb-2">Scholarship Category</label>
            <select name="scholarshipCategory" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option value="">Select category</option>
              <option value="SC" ${userApplication.scholarship_category === 'SC' ? 'selected' : ''}>SC (Scheduled Caste)</option>
              <option value="OBC" ${userApplication.scholarship_category === 'OBC' ? 'selected' : ''}>OBC (Other Backward Class)</option>
              <option value="EWS" ${userApplication.scholarship_category === 'EWS' ? 'selected' : ''}>EWS (Economically Weaker Section)</option>
              <option value="DNT" ${userApplication.scholarship_category === 'DNT' ? 'selected' : ''}>DNT (Denotified Tribes)</option>
              <option value="Transgender" ${userApplication.scholarship_category === 'Transgender' ? 'selected' : ''}>Transgender</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Do you identify as part of a protected class? *</label>
            <select name="protectedClass" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option value="">Select...</option>
              <option ${userApplication.protected_class === 'Scheduled Castes (SCs)' ? 'selected' : ''}>Scheduled Castes (SCs)</option>
              <option ${userApplication.protected_class === 'Other Backward Classes (OBCs)' ? 'selected' : ''}>Other Backward Classes (OBCs)</option>
              <option ${userApplication.protected_class === 'Economically Weaker Sections (EWS)' ? 'selected' : ''}>Economically Weaker Sections (EWS)</option>
              <option ${userApplication.protected_class === 'Denotified Tribes (DNTs)' ? 'selected' : ''}>Denotified Tribes (DNTs)</option>
              <option ${userApplication.protected_class === 'The Transgender community' ? 'selected' : ''}>The Transgender community</option>
              <option ${userApplication.protected_class === 'A class covered in the UK Equality Act 2010' ? 'selected' : ''}>A class covered in the UK Equality Act 2010</option>
              <option ${userApplication.protected_class === 'Prefer not to say' ? 'selected' : ''}>Prefer not to say</option>
              <option ${userApplication.protected_class === 'None of the above' ? 'selected' : ''}>None of the above</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">What do you want to get out of this for your career path? *</label>
            <textarea name="careerGoals" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="e.g., career change into impact space, developing career in AI, additional projects for portfolio, entrepreneurship, community of like-minded builders">${escapeHtml(userApplication.career_goals) || ''}</textarea>
          </div>
        `;
      } else if (userApplication.program === 'accelerator') {
        // Accelerator-specific fields
        html += `
          <div>
            <label class="block text-sm font-medium mb-2">Which track? *</label>
            <select name="track" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option value="">Select...</option>
              <option ${userApplication.track === 'Animal Advocacy' ? 'selected' : ''}>Animal Advocacy</option>
              <option ${userApplication.track === 'Climate Action' ? 'selected' : ''}>Climate Action</option>
              <option ${userApplication.track === 'AI Safety & Security' ? 'selected' : ''}>AI Safety & Security</option>
              <option ${userApplication.track === 'Hybrid (all three)' ? 'selected' : ''}>Hybrid (all three)</option>
            </select>
            <p class="text-xs text-gray-500 mt-1">
              Not sure which track fits your project?
              <a href="/tracks" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">
                Learn more about each track
              </a>
            </p>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Project Name</label>
            <input type="text" name="projectName" value="${escapeHtml(userApplication.project_name)}" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="Your project name">
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Project Description</label>
            <textarea name="projectDescription" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="Describe your project and its impact">${escapeHtml(userApplication.project_description)}</textarea>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Prototype Link</label>
            <input type="url" name="prototypeLink" value="${escapeHtml(userApplication.prototype_link)}" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="https://your-project.com">
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Tech Stack</label>
            <input type="text" name="techStack" value="${escapeHtml(userApplication.tech_stack)}" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="React, Node.js, PostgreSQL, etc.">
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Target Users</label>
            <textarea name="targetUsers" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="Who will use your product?">${escapeHtml(userApplication.target_users)}</textarea>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Production Needs</label>
            <textarea name="productionNeeds" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="What do you need to take this to production?">${escapeHtml(userApplication.production_needs) || ''}</textarea>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Technical experience</label>
            <textarea name="technicalExperience" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="What have you built? What languages/tools do you know?">${escapeHtml(userApplication.technical_experience) || ''}</textarea>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Team Size</label>
            <input type="number" name="teamSize" value="${userApplication.team_size || ''}" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="Number of team members" min="1">
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Current Stage</label>
            <select name="currentStage" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option value="">Select...</option>
              <option ${userApplication.current_stage === 'Prototype/MVP' ? 'selected' : ''}>Prototype/MVP</option>
              <option ${userApplication.current_stage === 'Beta with users' ? 'selected' : ''}>Beta with users</option>
              <option ${userApplication.current_stage === 'Live in production' ? 'selected' : ''}>Live in production</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Can you commit to the 10-week program (with a minimum of 3 weeks in-person in Bengaluru)? *</label>
            <select name="commitment" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option value="">Select...</option>
              <option ${userApplication.commitment === 'Yes, I can commit to the full program' ? 'selected' : ''}>Yes, I can commit to the full program</option>
              <option ${userApplication.commitment === 'Need to discuss timing' ? 'selected' : ''}>Need to discuss timing</option>
              <option ${userApplication.commitment === 'No, but interested in future cohorts' ? 'selected' : ''}>No, but interested in future cohorts</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Funding Type</label>
            <select name="funding" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option value="">Select...</option>
              <option ${userApplication.funding === 'For-profit' ? 'selected' : ''}>For-profit</option>
              <option ${userApplication.funding === 'Non-profit' ? 'selected' : ''}>Non-profit</option>
              <option ${userApplication.funding === 'Not sure yet' ? 'selected' : ''}>Not sure yet</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Do you identify as part of a protected class? *</label>
            <select name="protectedClass" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
              <option value="">Select...</option>
              <option ${userApplication.protected_class === 'Scheduled Castes (SCs)' ? 'selected' : ''}>Scheduled Castes (SCs)</option>
              <option ${userApplication.protected_class === 'Other Backward Classes (OBCs)' ? 'selected' : ''}>Other Backward Classes (OBCs)</option>
              <option ${userApplication.protected_class === 'Economically Weaker Sections (EWS)' ? 'selected' : ''}>Economically Weaker Sections (EWS)</option>
              <option ${userApplication.protected_class === 'Denotified Tribes (DNTs)' ? 'selected' : ''}>Denotified Tribes (DNTs)</option>
              <option ${userApplication.protected_class === 'The Transgender community' ? 'selected' : ''}>The Transgender community</option>
              <option ${userApplication.protected_class === 'A class covered in the UK Equality Act 2010' ? 'selected' : ''}>A class covered in the UK Equality Act 2010</option>
              <option ${userApplication.protected_class === 'Prefer not to say' ? 'selected' : ''}>Prefer not to say</option>
              <option ${userApplication.protected_class === 'None of the above' ? 'selected' : ''}>None of the above</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">What do you want to get out of this for your career path? *</label>
            <textarea name="careerGoals" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="e.g., career change into impact space, developing career in AI, additional projects for portfolio, entrepreneurship, community of like-minded builders">${escapeHtml(userApplication.career_goals) || ''}</textarea>
          </div>
        `;
      }

      formFields.innerHTML = html;
      
      // Add scholarship category toggle listener for bootcamp
      if (userApplication.program === 'bootcamp') {
        const scholarshipCheckbox = formFields.querySelector('input[name="scholarshipRequested"]');
        const scholarshipCategoryField = document.getElementById('scholarship-category-field');
        
        scholarshipCheckbox?.addEventListener('change', (e) => {
          const target = e.target as HTMLInputElement;
          if (target.checked) {
            scholarshipCategoryField?.classList.remove('hidden');
          } else {
            scholarshipCategoryField?.classList.add('hidden');
          }
        });
      }
      
      modal?.classList.remove('hidden');
    }

    // Close edit modal
    function closeEditModal() {
      document.getElementById('edit-modal')?.classList.add('hidden');
    }

    // Save application changes
    async function saveApplicationChanges(e: Event) {
      e.preventDefault();

      const form = e.target as HTMLFormElement;
      const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalBtnText = submitBtn.textContent;

      // Disable button and show loading state
      submitBtn.disabled = true;
      submitBtn.textContent = 'Saving...';

      const formData = new FormData(form);

      const updates: any = {
        name: formData.get('name'),
        whatsapp: formData.get('whatsapp'),
        location: formData.get('location'),
        discord: formData.get('discord')
      };

      if (userApplication.program === 'bootcamp') {
        updates.track = formData.get('track');
        updates.motivation = formData.get('motivation');
        updates.technical_experience = formData.get('technicalExperience');
        updates.commitment = formData.get('commitment');
        updates.scholarship_requested = formData.get('scholarshipRequested') === 'on';
        updates.scholarship_category = updates.scholarship_requested ? formData.get('scholarshipCategory') : null;
        updates.protected_class = formData.get('protectedClass');
        updates.career_goals = formData.get('careerGoals');
      } else if (userApplication.program === 'accelerator') {
        updates.track = formData.get('track');
        updates.project_name = formData.get('projectName');
        updates.project_description = formData.get('projectDescription');
        updates.prototype_link = formData.get('prototypeLink');
        updates.tech_stack = formData.get('techStack');
        updates.target_users = formData.get('targetUsers');
        updates.production_needs = formData.get('productionNeeds');
        updates.technical_experience = formData.get('technicalExperience');
        updates.team_size = formData.get('teamSize') ? parseInt(formData.get('teamSize') as string) : null;
        updates.current_stage = formData.get('currentStage');
        updates.commitment = formData.get('commitment');
        updates.funding = formData.get('funding');
        updates.protected_class = formData.get('protectedClass');
        updates.career_goals = formData.get('careerGoals');
      }

      const { data, error } = await supabase
        .from('applications')
        .update(updates)
        .eq('id', userApplication.id)
        .select();

      if (error) {
        console.error('Update error:', error);
        alert('Error updating application: ' + error.message);
        submitBtn.disabled = false;
        submitBtn.textContent = originalBtnText;
        return;
      }

      // Check if the update returned data (meaning it was successful)
      if (!data || data.length === 0) {
        console.error('Update failed: No data returned');
        alert('Unable to update application. Please try again or contact support.');
        submitBtn.disabled = false;
        submitBtn.textContent = originalBtnText;
        return;
      }

      alert('Application updated successfully!');
      submitBtn.disabled = false;
      submitBtn.textContent = originalBtnText;
      closeEditModal();

      // Reload application
      const { data: updatedData } = await supabase
        .from('applications')
        .select('*')
        .eq('user_id', currentUser.id)
        .single();

      if (updatedData) {
        userApplication = updatedData;
        displayApplicationDetails();
      }
    }

    // Event listeners
    document.getElementById('edit-btn')?.addEventListener('click', openEditModal);
    document.getElementById('close-edit-modal')?.addEventListener('click', closeEditModal);
    document.getElementById('cancel-edit')?.addEventListener('click', closeEditModal);
    document.getElementById('edit-form')?.addEventListener('submit', saveApplicationChanges);

    document.getElementById('logout-btn')?.addEventListener('click', async () => {
      await supabase.auth.signOut();
      window.location.href = '/';
    });

    // Click outside modal to close
    document.getElementById('edit-modal')?.addEventListener('click', (e) => {
      if (e.target === e.currentTarget) closeEditModal();
    });

    // Initialize
    checkAuthAndLoadApplication();
  </script>
</BaseLayout>
