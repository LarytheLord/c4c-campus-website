---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Platform Settings - Admin" currentPage="settings">
    <!-- Loading State -->
    <div id="loading-state" class="container mx-auto px-4 py-12">
      <div class="text-center">
        <div class="inline-block animate-spin rounded-full h-12 w-12 border-4 border-primary border-t-transparent"></div>
        <p class="mt-4 text-text-muted">Loading settings...</p>
      </div>
    </div>

    <!-- Access Denied State -->
    <div id="access-denied" class="hidden container mx-auto px-4 py-12">
      <div class="max-w-md mx-auto text-center">
        <div class="card">
          <h2 class="text-2xl font-bold mb-4">Access Denied</h2>
          <p class="text-text-muted mb-6">You need admin privileges to access this page.</p>
          <a href="/admin/dashboard" class="btn btn-primary">Go to Admin Dashboard</a>
        </div>
      </div>
    </div>

    <!-- Settings Content -->
    <div id="settings-content" class="hidden">
      <div class="container mx-auto px-4 py-8">
        <!-- Settings Navigation -->
        <div class="flex gap-4 mb-8 overflow-x-auto pb-2">
          <button class="settings-tab active" data-tab="branding">
            <span class="text-2xl">ğŸ¨</span>
            <span>Branding</span>
          </button>
          <button class="settings-tab" data-tab="platform">
            <span class="text-2xl">âš™ï¸</span>
            <span>Platform</span>
          </button>
          <button class="settings-tab" data-tab="features">
            <span class="text-2xl">ğŸš€</span>
            <span>Feature Flags</span>
          </button>
          <button class="settings-tab" data-tab="email">
            <span class="text-2xl">ğŸ“§</span>
            <span>Email Templates</span>
          </button>
          <button class="settings-tab" data-tab="advanced">
            <span class="text-2xl">ğŸ”§</span>
            <span>Advanced</span>
          </button>
          <button class="settings-tab" data-tab="import-export">
            <span class="text-2xl">ğŸ“¦</span>
            <span>Import/Export</span>
          </button>
        </div>

        <!-- Tab Content -->
        <div id="tab-content">
          <!-- Content will be loaded dynamically -->
        </div>
      </div>
    </div>

  <style>
    .settings-tab {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      padding: 1rem 1.5rem;
      background: var(--color-surface);
      border: 2px solid var(--color-border);
      border-radius: 0.5rem;
      cursor: pointer;
      transition: all 0.2s;
      white-space: nowrap;
      min-width: 120px;
    }

    .settings-tab:hover {
      border-color: var(--color-primary);
      background: var(--color-surface-hover, #252525);
    }

    .settings-tab.active {
      border-color: var(--color-primary);
      background: var(--color-primary);
      color: white;
    }

    .settings-tab span:last-child {
      font-size: 0.875rem;
      font-weight: 500;
    }
  </style>

  <script>
    import { supabase } from '../../lib/supabase';

    let currentUser: any = null;
    let isAdmin = false;
    let currentTab = 'branding';

    async function checkAdminAccess() {
      const { data: { session } } = await supabase.auth.getSession();

      if (!session) {
        window.location.href = '/login';
        return false;
      }

      currentUser = session.user;

      // Check if user has admin role
      const { data: application } = await supabase
        .from('applications')
        .select('role')
        .eq('user_id', currentUser.id)
        .single();

      if (!application || application.role !== 'admin') {
        document.getElementById('loading-state')?.classList.add('hidden');
        document.getElementById('access-denied')?.classList.remove('hidden');
        return false;
      }

      isAdmin = true;
      return true;
    }

    function loadTabContent(tab: string) {
      const content = document.getElementById('tab-content');
      if (!content) return;

      // Update active tab
      document.querySelectorAll('.settings-tab').forEach(btn => {
        btn.classList.remove('active');
      });
      document.querySelector(`[data-tab="${tab}"]`)?.classList.add('active');

      // Load appropriate content inline
      switch (tab) {
        case 'branding':
          content.innerHTML = `
            <div class="card">
              <h2 class="text-xl font-bold mb-4">ğŸ¨ Branding Settings</h2>
              <p class="text-text-muted mb-4">Customize your platform's look and feel.</p>
              <a href="/admin/settings/branding" class="btn btn-primary">Open Branding Editor</a>
            </div>
          `;
          break;
        case 'platform':
          content.innerHTML = `
            <div class="card">
              <h2 class="text-xl font-bold mb-4">âš™ï¸ Platform Settings</h2>
              <p class="text-text-muted">Platform configuration settings coming soon.</p>
            </div>
          `;
          break;
        case 'features':
          content.innerHTML = `
            <div class="card">
              <h2 class="text-xl font-bold mb-4">ğŸš€ Feature Flags</h2>
              <p class="text-text-muted">Feature flag management coming soon.</p>
            </div>
          `;
          break;
        case 'email':
          content.innerHTML = `
            <div class="card">
              <h2 class="text-xl font-bold mb-4">ğŸ“§ Email Templates</h2>
              <p class="text-text-muted">Email template customization coming soon.</p>
            </div>
          `;
          break;
        case 'advanced':
          content.innerHTML = `
            <div class="card">
              <h2 class="text-xl font-bold mb-4">ğŸ”§ Advanced Settings</h2>
              <p class="text-text-muted">Advanced configuration options coming soon.</p>
            </div>
          `;
          break;
        case 'import-export':
          content.innerHTML = `
            <div class="card">
              <h2 class="text-xl font-bold mb-4">ğŸ“¦ Import/Export</h2>
              <p class="text-text-muted">Data import and export tools coming soon.</p>
            </div>
          `;
          break;
      }
    }

    async function initSettings() {
      const hasAccess = await checkAdminAccess();
      if (!hasAccess) return;

      document.getElementById('loading-state')?.classList.add('hidden');
      document.getElementById('settings-content')?.classList.remove('hidden');

      // Load default tab
      loadTabContent(currentTab);
    }

    // Event listeners
    document.querySelectorAll('.settings-tab').forEach(btn => {
      btn.addEventListener('click', () => {
        const tab = btn.getAttribute('data-tab');
        if (tab) {
          currentTab = tab;
          loadTabContent(tab);
        }
      });
    });

    // Initialize
    initSettings();
  </script>
</AdminLayout>
