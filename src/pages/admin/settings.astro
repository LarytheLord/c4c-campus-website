---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Platform Settings - Admin" hideHeader={true} hideFooter={true}>
  <div class="min-h-screen bg-background">
    <!-- Admin Header -->
    <div class="sticky top-0 z-50 bg-surface border-b border-border">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between gap-4">
          <div class="flex items-center gap-4 flex-1">
            <a href="/admin/dashboard" class="flex-shrink-0">
              <img src="/logo.jpeg" alt="C4C Campus" class="h-10 w-10 rounded-lg" />
            </a>
            <div>
              <h1 class="text-xl sm:text-2xl font-bold">Platform Settings</h1>
              <p class="text-text-muted text-sm">White-labeling & Configuration</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <a href="/admin/dashboard" class="btn btn-ghost btn-sm">Back to Dashboard</a>
            <button id="logout-btn" class="btn btn-ghost text-sm">Sign Out</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Loading State -->
    <div id="loading-state" class="container mx-auto px-4 py-12">
      <div class="text-center">
        <div class="inline-block animate-spin rounded-full h-12 w-12 border-4 border-primary border-t-transparent"></div>
        <p class="mt-4 text-text-muted">Loading settings...</p>
      </div>
    </div>

    <!-- Access Denied State -->
    <div id="access-denied" class="hidden container mx-auto px-4 py-12">
      <div class="max-w-md mx-auto text-center">
        <div class="card">
          <h2 class="text-2xl font-bold mb-4">Access Denied</h2>
          <p class="text-text-muted mb-6">You need admin privileges to access this page.</p>
          <a href="/dashboard" class="btn btn-primary">Go to Dashboard</a>
        </div>
      </div>
    </div>

    <!-- Settings Content -->
    <div id="settings-content" class="hidden">
      <div class="container mx-auto px-4 py-8">
        <!-- Settings Navigation -->
        <div class="flex gap-4 mb-8 overflow-x-auto pb-2">
          <button class="settings-tab active" data-tab="branding">
            <span class="text-2xl">üé®</span>
            <span>Branding</span>
          </button>
          <button class="settings-tab" data-tab="platform">
            <span class="text-2xl">‚öôÔ∏è</span>
            <span>Platform</span>
          </button>
          <button class="settings-tab" data-tab="features">
            <span class="text-2xl">üöÄ</span>
            <span>Feature Flags</span>
          </button>
          <button class="settings-tab" data-tab="email">
            <span class="text-2xl">üìß</span>
            <span>Email Templates</span>
          </button>
          <button class="settings-tab" data-tab="advanced">
            <span class="text-2xl">üîß</span>
            <span>Advanced</span>
          </button>
          <button class="settings-tab" data-tab="import-export">
            <span class="text-2xl">üì¶</span>
            <span>Import/Export</span>
          </button>
        </div>

        <!-- Tab Content -->
        <div id="tab-content">
          <!-- Content will be loaded dynamically -->
        </div>
      </div>
    </div>
  </div>

  <style>
    .settings-tab {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      padding: 1rem 1.5rem;
      background: var(--color-surface);
      border: 2px solid var(--color-border);
      border-radius: 0.5rem;
      cursor: pointer;
      transition: all 0.2s;
      white-space: nowrap;
      min-width: 120px;
    }

    .settings-tab:hover {
      border-color: var(--color-primary);
      background: var(--color-surface-hover, #252525);
    }

    .settings-tab.active {
      border-color: var(--color-primary);
      background: rgba(16, 185, 129, 0.1);
    }

    .settings-tab span:last-child {
      font-size: 0.875rem;
      font-weight: 500;
    }
  </style>

  <script>
    import { supabase } from '../../lib/supabase';

    let currentUser: any = null;
    let isAdmin = false;
    let currentTab = 'branding';

    async function checkAdminAccess() {
      const { data: { session } } = await supabase.auth.getSession();

      if (!session) {
        window.location.href = '/login';
        return false;
      }

      currentUser = session.user;

      // Check if user has admin role
      const { data: application } = await supabase
        .from('applications')
        .select('role')
        .eq('user_id', currentUser.id)
        .single();

      if (!application || application.role !== 'admin') {
        document.getElementById('loading-state')?.classList.add('hidden');
        document.getElementById('access-denied')?.classList.remove('hidden');
        return false;
      }

      isAdmin = true;
      return true;
    }

    function loadTabContent(tab: string) {
      const content = document.getElementById('tab-content');
      if (!content) return;

      // Update active tab
      document.querySelectorAll('.settings-tab').forEach(btn => {
        btn.classList.remove('active');
      });
      document.querySelector(`[data-tab="${tab}"]`)?.classList.add('active');

      // Load appropriate content
      switch (tab) {
        case 'branding':
          window.location.href = '/admin/settings/branding';
          break;
        case 'platform':
          window.location.href = '/admin/settings/platform';
          break;
        case 'features':
          window.location.href = '/admin/settings/features';
          break;
        case 'email':
          window.location.href = '/admin/settings/email-templates';
          break;
        case 'advanced':
          window.location.href = '/admin/settings/advanced';
          break;
        case 'import-export':
          window.location.href = '/admin/settings/import-export';
          break;
      }
    }

    async function initSettings() {
      const hasAccess = await checkAdminAccess();
      if (!hasAccess) return;

      document.getElementById('loading-state')?.classList.add('hidden');
      document.getElementById('settings-content')?.classList.remove('hidden');

      // Load default tab
      loadTabContent(currentTab);
    }

    // Event listeners
    document.getElementById('logout-btn')?.addEventListener('click', async () => {
      await supabase.auth.signOut();
      window.location.href = '/login';
    });

    document.querySelectorAll('.settings-tab').forEach(btn => {
      btn.addEventListener('click', () => {
        const tab = btn.getAttribute('data-tab');
        if (tab) {
          currentTab = tab;
          loadTabContent(tab);
        }
      });
    });

    // Initialize
    initSettings();
  </script>
</BaseLayout>
