---
/**
 * Search Analytics Dashboard (Admin Only)
 *
 * Displays:
 * - Top searches (last 30 days)
 * - Zero-result searches (content gaps)
 * - Performance metrics
 * - User engagement stats
 */
import AdminLayout from '../../layouts/AdminLayout.astro';

// Get session from cookie for authentication check
const cookies = Astro.request.headers.get('cookie');
if (cookies) {
  const sessionMatch = cookies.match(/sb-[^=]+-auth-token=([^;]+)/);
  if (sessionMatch) {
    // Session exists - user is authenticated
    // Auth verification is done by the API endpoint
  }
}

// Fetch analytics data
let analytics = null;
let error = null;

try {
  const response = await fetch(`${Astro.url.origin}/api/search/analytics`, {
    headers: {
      'Cookie': Astro.request.headers.get('Cookie') || ''
    }
  });

  if (response.status === 401) {
    return Astro.redirect('/login?redirect=/admin/search-analytics');
  }

  if (response.status === 403) {
    error = 'Access denied. Admin privileges required.';
  } else if (response.ok) {
    analytics = await response.json();
  } else {
    error = 'Failed to load analytics data';
  }
} catch (e) {
  console.error('Analytics error:', e);
  error = 'Failed to load analytics data';
}
---

<AdminLayout title="Search Analytics - Admin Dashboard" currentPage="analytics">
  <div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {/* Header */}
      <div class="mb-8">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
              <svg class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              Search Analytics
            </h1>
            <p class="mt-1 text-gray-600">Insights from the last 30 days</p>
          </div>
          <a
            href="/admin/dashboard"
            class="inline-flex items-center gap-2 px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
          >
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Dashboard
          </a>
        </div>
      </div>

      {error ? (
        <div class="bg-red-50 border border-red-200 rounded-lg p-6 text-red-700">
          <div class="flex items-center gap-3">
            <svg class="h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h3 class="font-semibold">Error</h3>
              <p class="text-sm mt-1">{error}</p>
            </div>
          </div>
        </div>
      ) : analytics ? (
        <div class="space-y-6">
          {/* Overall Stats */}
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-white shadow rounded-lg p-6 border border-gray-200">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-500">Total Searches</p>
                  <p class="mt-2 text-3xl font-bold text-gray-900">
                    {analytics.overall_stats.total_searches.toLocaleString()}
                  </p>
                </div>
                <div class="p-3 bg-blue-100 rounded-lg">
                  <svg class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                </div>
              </div>
            </div>

            <div class="bg-white shadow rounded-lg p-6 border border-gray-200">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-500">Avg Response Time</p>
                  <p class="mt-2 text-3xl font-bold text-gray-900">
                    {analytics.overall_stats.avg_response_time_ms}ms
                  </p>
                </div>
                <div class="p-3 bg-green-100 rounded-lg">
                  <svg class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
              </div>
            </div>

            <div class="bg-white shadow rounded-lg p-6 border border-gray-200">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-500">Avg Results</p>
                  <p class="mt-2 text-3xl font-bold text-gray-900">
                    {analytics.overall_stats.avg_results_per_search}
                  </p>
                </div>
                <div class="p-3 bg-purple-100 rounded-lg">
                  <svg class="h-8 w-8 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
              </div>
            </div>

            <div class="bg-white shadow rounded-lg p-6 border border-gray-200">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-500">Avg CTR</p>
                  <p class="mt-2 text-3xl font-bold text-gray-900">
                    {analytics.overall_stats.avg_click_through_rate}%
                  </p>
                </div>
                <div class="p-3 bg-yellow-100 rounded-lg">
                  <svg class="h-8 w-8 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122" />
                  </svg>
                </div>
              </div>
            </div>
          </div>

          {/* Top Searches */}
          <div class="bg-white shadow rounded-lg border border-gray-200 overflow-hidden">
            <div class="px-6 py-5 border-b border-gray-200 bg-gray-50">
              <h2 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
                Top Searches
              </h2>
              <p class="text-sm text-gray-600 mt-1">Most popular search queries</p>
            </div>

            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Query
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Searches
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Unique Users
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Avg Results
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      CTR
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  {analytics.top_searches.slice(0, 20).map((item: any) => (
                    <tr class="hover:bg-gray-50">
                      <td class="px-6 py-4 whitespace-nowrap">
                        <a
                          href={`/search?q=${encodeURIComponent(item.query)}`}
                          class="text-sm font-medium text-green-600 hover:text-green-700"
                        >
                          {item.query}
                        </a>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {item.search_count}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {item.unique_users}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {item.avg_results ? item.avg_results.toFixed(1) : 'N/A'}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {item.click_through_rate ? `${item.click_through_rate}%` : 'N/A'}
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </div>

          {/* Zero-Result Searches */}
          <div class="bg-white shadow rounded-lg border border-gray-200">
            <div class="px-6 py-5 border-b border-gray-200 bg-yellow-50">
              <h2 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                <svg class="h-5 w-5 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                Zero-Result Searches
              </h2>
              <p class="text-sm text-gray-600 mt-1">Content gaps - queries that returned no results</p>
            </div>

            <div class="p-6">
              {analytics.zero_result_searches.length > 0 ? (
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
                  {analytics.zero_result_searches.map((item: any) => (
                    <div class="flex items-center justify-between p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                      <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium text-gray-900 truncate">
                          {item.query}
                        </p>
                        <p class="text-xs text-gray-500">
                          {item.count} {item.count === 1 ? 'search' : 'searches'}
                        </p>
                      </div>
                      <a
                        href={`/search?q=${encodeURIComponent(item.query)}`}
                        class="ml-3 p-1 text-yellow-600 hover:text-yellow-700"
                        aria-label="Try search"
                      >
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                      </a>
                    </div>
                  ))}
                </div>
              ) : (
                <div class="text-center py-6 text-gray-500">
                  <svg class="h-12 w-12 mx-auto mb-3 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <p class="font-medium">No zero-result searches found</p>
                  <p class="text-sm mt-1">All searches are returning results. Great job!</p>
                </div>
              )}
            </div>
          </div>
        </div>
      ) : (
        <div class="flex items-center justify-center py-16">
          <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-green-600"></div>
        </div>
      )}
    </div>
  </div>
</AdminLayout>
