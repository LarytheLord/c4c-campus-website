  <style>
    .program-btn.active-program {
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1) !important;
      transform: scale(1.02) !important;
    }

    #btn-bootcamp.active-program {
      background: linear-gradient(to bottom right, rgba(59, 130, 246, 0.15), rgba(59, 130, 246, 0.05)) !important;
      border-color: rgb(59, 130, 246) !important;
      border-width: 3px !important;
    }

    #btn-hackathons.active-program {
      background: linear-gradient(to bottom right, rgba(34, 211, 238, 0.15), rgba(34, 211, 238, 0.05)) !important;
      border-color: rgb(34, 211, 238) !important;
      border-width: 3px !important;
    }

    #btn-accelerator.active-program {
      background: linear-gradient(to bottom right, rgba(251, 146, 60, 0.15), rgba(251, 146, 60, 0.05)) !important;
      border-color: rgb(251, 146, 60) !important;
      border-width: 3px !important;
    }
  </style>

  <script>
    // Program selection functionality
    const programBtns = document.querySelectorAll('.program-btn');
    const programDetails = document.querySelectorAll('.program-detail');

    function showProgram(programId: string, shouldScroll = true) {
      // Hide all program details
      programDetails.forEach(detail => detail.classList.add('hidden'));

      // Remove active state from all buttons
      programBtns.forEach(btn => {
        btn.classList.remove('active-program');
      });

      // Show selected program
      const selectedProgram = document.getElementById(programId);
      if (selectedProgram) {
        selectedProgram.classList.remove('hidden');
        if (shouldScroll) {
          // Scroll with offset to account for sticky header (64px + 16px padding)
          const headerOffset = 80;
          const elementPosition = selectedProgram.getBoundingClientRect().top;
          const offsetPosition = elementPosition + window.scrollY - headerOffset;

          window.scrollTo({
            top: offsetPosition,
            behavior: 'smooth'
          });
        }
      }

      // Highlight selected button - handle incubator/accelerator alias
      const buttonId = programId === 'incubator' ? 'btn-accelerator' : `btn-${programId}`;
      const selectedBtn = document.getElementById(buttonId);
      if (selectedBtn) {
        selectedBtn.classList.add('active-program');
      }
    }

    // Add click handlers
    document.getElementById('btn-bootcamp')?.addEventListener('click', () => showProgram('bootcamp'));
    document.getElementById('btn-hackathons')?.addEventListener('click', () => showProgram('hackathons'));
    document.getElementById('btn-accelerator')?.addEventListener('click', () => showProgram('incubator'));

    // Check if there's a hash in the URL and show that program
    const hash = window.location.hash.substring(1); // Remove the #
    const programMap: Record<string, string> = {
      'bootcamp': 'bootcamp',
      'hackathons': 'hackathons',
      'incubator': 'incubator',
      'accelerator': 'incubator'
    };

    if (hash && programMap[hash]) {
      showProgram(programMap[hash], true);
    } else {
      // Show first program by default without scrolling
      showProgram('bootcamp', false);
    }
  </script>
</BaseLayout>
