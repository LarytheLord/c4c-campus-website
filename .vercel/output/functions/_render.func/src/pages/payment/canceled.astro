---
/**
 * Payment Canceled Page
 *
 * Shown when user cancels the checkout process
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Payment Canceled - C4C Campus">
  <div class="canceled-page">
    <div class="container">
      <div class="canceled-content">
        <div class="canceled-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M6 18L18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>

        <h1 class="canceled-title">Payment Canceled</h1>
        <p class="canceled-message">
          Your payment was canceled. No charges have been made to your account.
        </p>

        <div class="info-box">
          <h3>Need Help?</h3>
          <p>
            If you experienced any issues during checkout or have questions about pricing,
            we're here to help!
          </p>
        </div>

        <div class="actions">
          <a href="/pricing" class="btn btn-primary">Back to Pricing</a>
          <a href="/contact" class="btn btn-secondary">Contact Support</a>
        </div>

        <div class="alternatives">
          <h3>Other Options</h3>
          <div class="alt-options">
            <a href="/courses" class="alt-option">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Browse Free Courses</span>
            </a>

            <a href="/apply" class="alt-option">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Apply for Scholarship</span>
            </a>

            <a href="/about" class="alt-option">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Learn More About Us</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    .canceled-page {
      min-height: 100vh;
      background: linear-gradient(to bottom, #f7fafc, #edf2f7);
      padding: 4rem 1.5rem;
    }

    .container {
      max-width: 700px;
      margin: 0 auto;
    }

    .canceled-content {
      background: white;
      border-radius: 16px;
      padding: 3rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    .canceled-icon {
      width: 5rem;
      height: 5rem;
      margin: 0 auto 2rem;
      color: #f6ad55;
    }

    .canceled-title {
      font-size: 2.5rem;
      font-weight: 800;
      color: #1a202c;
      margin-bottom: 1rem;
    }

    .canceled-message {
      font-size: 1.25rem;
      color: #4a5568;
      margin-bottom: 2rem;
    }

    .info-box {
      background: #fff5f7;
      border-left: 4px solid #f6ad55;
      padding: 1.5rem;
      border-radius: 8px;
      margin: 2rem 0;
      text-align: left;
    }

    .info-box h3 {
      font-size: 1.25rem;
      font-weight: 700;
      color: #2d3748;
      margin-bottom: 0.5rem;
    }

    .info-box p {
      color: #4a5568;
      line-height: 1.6;
    }

    .actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
      margin: 2rem 0;
    }

    .btn {
      padding: 0.875rem 2rem;
      border-radius: 8px;
      font-weight: 700;
      text-decoration: none;
      transition: all 0.3s;
      display: inline-block;
    }

    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 16px rgba(102, 126, 234, 0.4);
    }

    .btn-secondary {
      background: white;
      color: #3182ce;
      border: 2px solid #3182ce;
    }

    .btn-secondary:hover {
      background: #3182ce;
      color: white;
    }

    .alternatives {
      margin-top: 3rem;
      text-align: left;
    }

    .alternatives h3 {
      font-size: 1.5rem;
      font-weight: 700;
      color: #2d3748;
      margin-bottom: 1.5rem;
      text-align: center;
    }

    .alt-options {
      display: grid;
      gap: 1rem;
    }

    .alt-option {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1.25rem;
      background: #f7fafc;
      border-radius: 8px;
      text-decoration: none;
      color: #2d3748;
      transition: all 0.3s;
    }

    .alt-option:hover {
      background: #edf2f7;
      transform: translateX(4px);
    }

    .alt-option svg {
      width: 1.5rem;
      height: 1.5rem;
      color: #3182ce;
      flex-shrink: 0;
    }

    .alt-option span {
      font-weight: 600;
    }

    @media (max-width: 768px) {
      .canceled-title {
        font-size: 2rem;
      }

      .actions {
        flex-direction: column;
      }

      .btn {
        width: 100%;
      }
    }
  </style>
</BaseLayout>
